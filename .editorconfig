# ============================================================================
# IRIS - EditorConfig
# ============================================================================
# Configuração consistente entre editores
# https://editorconfig.org
# ============================================================================

root = true

# Padrão para todos os arquivos
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Python
[*.py]
indent_size = 4
max_line_length = 88

# JavaScript / TypeScript / React
[*.{js,jsx,ts,tsx}]
indent_size = 2

# JSON
[*.json]
indent_size = 2

# YAML
[*.{yml,yaml}]
indent_size = 2

# HTML / CSS / SCSS
[*.{html,css,scss}]
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# SQL
[*.sql]
indent_size = 4

# Makefile (requer tabs)
[Makefile]
indent_style = tab

# Shell scripts
[*.sh]
indent_size = 2

# Docker
[Dockerfile]
indent_size = 4

[docker-compose*.yml]
indent_size = 2
