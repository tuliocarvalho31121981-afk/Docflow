# ==============================================================================
# CONFIGURAÇÕES DO BACKEND - SISTEMA GESTÃO CLÍNICAS
# ==============================================================================

# ------------------------------------------------------------------------------
# APP
# ------------------------------------------------------------------------------
APP_ENV=development
APP_DEBUG=true
APP_SECRET_KEY=change-me-in-production-use-random-string

# ------------------------------------------------------------------------------
# API
# ------------------------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/v1

# ------------------------------------------------------------------------------
# SUPABASE (OBRIGATÓRIO)
# Pegue em: https://supabase.com/dashboard/project/SEU_PROJETO/settings/api
# ------------------------------------------------------------------------------
SUPABASE_URL=https://SEU_PROJETO.supabase.co
SUPABASE_KEY=eyJ...sua_anon_key...
SUPABASE_SERVICE_KEY=eyJ...sua_service_role_key...

# ------------------------------------------------------------------------------
# OPENROUTER (IA) - Opcional
# https://openrouter.ai/keys
# ------------------------------------------------------------------------------
OPENROUTER_API_KEY=
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_MODEL_CHAT=anthropic/claude-3.5-sonnet
OPENROUTER_MODEL_TRANSCRIPTION=openai/whisper-large-v3
OPENROUTER_MODEL_VISION=anthropic/claude-3.5-sonnet
OPENROUTER_APP_NAME=DocFlow
OPENROUTER_APP_URL=http://localhost:8000

# ------------------------------------------------------------------------------
# GROQ (Transcrição) - Opcional
# https://console.groq.com/keys
# ------------------------------------------------------------------------------
GROQ_API_KEY=
GROQ_MODEL_WHISPER=whisper-large-v3

# ------------------------------------------------------------------------------
# REDIS - Opcional (cache)
# ------------------------------------------------------------------------------
REDIS_URL=

# ------------------------------------------------------------------------------
# EVOLUTION API (WhatsApp) - Opcional
# ------------------------------------------------------------------------------
EVOLUTION_API_URL=http://localhost:8080
EVOLUTION_API_KEY=
EVOLUTION_INSTANCE=docflow-whatsapp

# ------------------------------------------------------------------------------
# KESTRA (Workflows) - Opcional
# ------------------------------------------------------------------------------
KESTRA_URL=http://localhost:8080
KESTRA_API_KEY=
KESTRA_NAMESPACE=docflow

# ------------------------------------------------------------------------------
# CORS
# ------------------------------------------------------------------------------
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ------------------------------------------------------------------------------
# SENTRY (Monitoramento) - Opcional
# ------------------------------------------------------------------------------
SENTRY_DSN=

# ------------------------------------------------------------------------------
# LOGS
# ------------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FORMAT=json
